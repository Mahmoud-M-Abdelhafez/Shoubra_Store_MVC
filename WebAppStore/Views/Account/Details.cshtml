@{

	ViewData["Title"] = "My Profile Page";
} 
@model AppUser
<style>
body{
		background: -webkit-linear-gradient(left, #db1102, #8f0e04);
	
}

	.container{
		margin:100px;
	}
.card {
	position: relative;
	display: flex;
	flex-direction: column;
	min-width: 0;
	word-wrap: break-word;
	background-color: #fff;
	background-clip: border-box;
	border: 0 solid transparent;
	border-radius: .25rem;
	
	box-shadow: 0 2px 6px 0 rgb(218 218 253 / 65%), 0 2px 6px 0 rgb(206 206 238 / 54%);
}
.me-2 {
	margin-right: .5rem!important;
}
</style>
<div class="container">
	<div class="main-body">
		<div class="row">
			<div class="col-lg-4">
				<div class="card">
					<div class="card-body">
						<div class="d-flex flex-column align-items-center text-center">
							@if (Model.ProfilePicture==null)
							{
								<img src="https://bootdey.com/img/Content/avatar/avatar6.png" alt="Admin" class="rounded-circle p-1 bg-primary" width="180">
							}else{
								<img src="@Model.ProfilePicture" alt="Admin" class="rounded-circle p-1 bg-primary" width="180">
							}
							
							<div class="mt-3">
								<h4>@Model.Name</h4>
								<p class="text-secondary mb-1">@Model.Address</p>
								<a class="dropdown-item" asp-controller="Review" asp-action="Add" asp-route-id="@Model.Id"><button class="btn btn-outline-primary"><i class="bi bi-star-fill"></i>&nbsp; Add Review</button></a>
								<br />
								<a class="dropdown-item" asp-controller="Account" asp-action="Logout"><button class="btn btn-outline-primary"><i class="bi bi-box-arrow-right"></i>&nbsp; Log out</button></a>

							</div>
						</div>
						
						
					</div>
				</div>
			</div>
			<div class="col-lg-8">
				<div class="card">
					<div class="card-body">
						<div class="row mb-3">
							<div class="col-sm-3">
								<h6 class="mb-0">Name</h6>
							</div>
							<div class="col-sm-9 text-secondary">
								<input type="text" class="form-control" value="@Model.Name" readonly>
							</div>
						</div>
						<div class="row mb-3">
							<div class="col-sm-3">
								<h6 class="mb-0">Email</h6>
							</div>
							<div class="col-sm-9 text-secondary">
								<input type="text" class="form-control" value="@Model.Email" readonly>
							</div>
						</div>
						
						<div class="row mb-3">
							<div class="col-sm-3">
								<h6 class="mb-0">Address</h6>
							</div>
							<div class="col-sm-9 text-secondary">
								<input type="text" class="form-control" value="@Model.Address" readonly>
							</div>
						</div>
						<div class="row">
							<div class="col-sm-3"></div>
							<div class="col-sm-9 text-secondary">
								<a asp-controller="Account" asp-action="EditUser" asp-route-id="@Model.Id"><button class="btn btn-outline-primary"><i style="font-size:30px;" class="bi bi-person-fill-gear"></i>&nbsp; Edit Profile</button></a>

							</div>
						</div>
					</div>
				</div>
				
			</div>
		</div>
	</div>
</div>