@model List<AppUser>
<section id="team" class="team section">

    <div class="container">

        <div class="row gy-4">
            @foreach (var user in Model)
            {
                <div class="col-lg-6" data-aos="fade-up" data-aos-delay="100">
                    <div class="team-member d-flex align-items-start">
                        <div class="pic"><i style="font-size:110px;" class="bi bi-person-square"></i></div>
                        <div class="member-info">
                            <h4>@user.Name</h4>
                            <span>@user.Address</span>
                            <p>@user.Email</p>
                            <div class="social">
                                <a asp-controller="Account" asp-action="EditUser" asp-route-id="@user.Id"><i style="font-size:30px;" class="bi bi-person-fill-gear"></i></a>
                                <span>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;</span>
                                <a asp-controller="Account" asp-action="DeleteUser" asp-route-id="@user.Id"><i style="font-size:30px;" class="bi bi-person-fill-slash"></i></a>
                            </div>
                        </div>
                    </div>
                    <form asp-action="Edit_Role" asp-controller="Account" asp-route="@user.Id" method="post">

                        <input type="radio" name="role" value="User" />
                        <input type="radio" name="role" value="Admin" />
                        <input type="submit" name="name" value="Update" />
                    </form>
                </div>


                <!-- End Team Member -->
            }
        </div>

    </div>

</section><!-- /Team Section -->
