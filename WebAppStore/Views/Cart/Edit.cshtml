@using WebAppStore.ViewModels

@model CartDetailsVM
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<style>
    body {
        background: -webkit-linear-gradient(left, #db1102, #8f0e04);
    }

    .contact-form {
        background: #fff;
        margin-top: 5%;
        margin-bottom: 5%;
        width: 100%;
    }

        .contact-form .form-control {
            border-radius: 1rem;
        }

    .contact-image {
        text-align: center;
    }

        .contact-image img {
            border-radius: 6rem;
            width: 11%;
            margin-top: -3%;
            transform: rotate(29deg);
        }

    .contact-form form {
        padding: 5%;
    }

        .contact-form form .row {
            margin-bottom: 1%;
        }

    .contact-form .btnContact {
        text-align: center;
        width: 20%;
        margin-top: 5px;
        border: none;
        border-radius: 1rem;
        padding: 1.5%;
        background: #fada0c;
        font-weight: 600;
        color: #fff;
        cursor: pointer;
        font-size: 20px;
    }

        .contact-form .btnContact:hover {
            background: red;
        }
</style>
<div class="container contact-form">
    <div style="text-align:center;">
        <i style="font-size:80px; color:blue; display:block;" class="bi bi-pencil-square"></i>

        <h3 style="font-size:30px; color:blue; margin-top:10px; margin-bottom:0;">Edit Your Cart</h3>
    </div>
    <form action="/Cart/Update" method="post" style="text-align:center;">

        <div class=" row justify-content-center">
            <img src="@Model.productImage.Path" alt="product image" style="width:200px; margin:20px; height:180px; border-radius:10px; border:2px solid #ddd; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);" />

            <div class="col-md-6">
                <input type="text" name="Id" class="form-control" id="name" value="@Model.cart.Id" hidden />
                <input type="text" name="UserId" class="form-control" value="@Model.cart.UserId" hidden />
                <div class="form-group">
                    <label class="label" for="name">Name of Product</label>
                    <input type="text"  class="form-control" id="name" value="@Model.product.Name" readonly />
                </div>
                <div class="form-group">
                    <label class="label" for="Description">Description</label>
                    <input type="text" class="form-control" id="Description" value="@Model.product.Description" readonly />
                </div>
                <div class="form-group">
                    <label class="label" for="Price">Price</label>
                    <input type="number" class="form-control" id="Price" value="@Model.product.Price" readonly />
                </div>
                <div class="form-group">
                    <label class="label" for="Quantity">Quantity</label>
                    <input type="number" class="form-control" id="Quantity" name="Qty" value="@Model.cart.Qty"  />
                </div>
            </div>




        </div>
        <div class="form-group" style="text-align:center;">
            <input type="submit" name="btnSubmit" class="btnContact" value="Update" />
        </div>
    </form>
</div>